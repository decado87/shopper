<h2>Current Cart</h2>

<table>
  <thead>
  <tr>
    <td>Product</td>
    <td>Price</td>
    <td>Quantity</td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.product.title %></td>
      <td><%= number_to_currency item.price %></td>
      <td>
        <%= form_tag order_items_path do %>
          <%= hidden_field_tag :product_id, item.product.id %>
          <%= hidden_field_tag :quantity, 1 %>
          <%= submit_tag "+" %>
        <% end %>
      </td>

      <!--      <td><%#= number_field_tag :quantity, item.quantity %></td>-->
      <td><%= item.quantity %></td>

      <td>
        <%= form_tag order_items_path do %>
          <%= hidden_field_tag :product_id, item.product.id %>
          <%= hidden_field_tag :quantity, -1 %>
          <%= submit_tag "-" %>
        <% end %>
      </td>

      <td>
        <%= form_for item, method: :delete do |f| %>
          <%= f.submit "Remove whole product" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>

  <tfoot>
  <tr>

    <td colespan="4" align="left">
      <b>Total -
        <%= number_to_currency current_cart.sub_total %>
      </b>
    </td>
  </tr>
  </tfoot>
</table>

<%= link_to 'Checkout', checkout_path %>